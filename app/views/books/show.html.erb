

<div class="container">
  <div class="row">
    <div class= "col-md-3">
      <h1 class='my-5'>User info</h1>
      <p class="border-bottom"><%= image_tag @user.get_profile_image(200,200)%></p>
      <div class="row border-bottom">
        <h5 class='col text-dark py-3 me-3'>name</h5>
        <h5 class="col py-3"><%= @user.name %></h5>
      </div>
      <div class="row border-bottom">
        <h5 class='col text-dark py-3 me-3'>introduction</h5>
        <h5 class="col py-3"><%= @user.introduction %></h5>
      </div>
      <div class="row">
        <%= link_to edit_user_path(@user), method: :get, class:"btn btn-outline-secondary" do%>
            <i class="fas fa-user-cog fs-3 text-dark"></i>
        <% end %>
      </div>
      <div>
        <h1 class='my-5 w-50'>New book</h1>
          <%= form_with model: @books do |f| %>
            <h5 class="fw-bolder">Title</h5>
              <%= f.text_field :title %>
            <h5>Opinion</h5>
              <%= f.text_area :body%>
            <div>
              <%= f.submit 'Create Book', class: "btn btn-success mt-4" %>
            </div>
          <% end %>
      </div>
    </div>
<!-- ユーザーの投稿一覧 -->
    <div class="offset-md-1 col-md-8 my-5">
      <h1>Book detail</h1>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_profile_image(100,100) %>
                <% end %>
            </td>
            <td> <%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %>></td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to 'Edit', edit_book_path, class: " btn btn-success m-2"%>
                <%= link_to 'Destroy', book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" ,class: 'btn btn-danger m-2 ' %>
              <% end %>
            </td>
          </tr>
          <%= link_to @user.name, user_path(@user.id) %>
        </tbody>
      </div>
    </div>
  </div>


