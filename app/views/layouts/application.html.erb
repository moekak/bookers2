<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">



    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg bg-dark text-white">
        <div class="container-fluid mr-10">
          <%= link_to "Bookers", root_path, class: "logo p-10 text-light" %>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item m-4">
              <%= link_to  user_path(current_user),method: :get do %>
                <h6 class="text-light fs-2"><i class="fas fa-home"></i>Home</h6>
              <% end %>
            </li>
            <li class="nav-item m-4">
              <%= link_to  users_path,method: :get do %>
                <h6 class="text-light fs-2"><i class="fas fa-users"></i>Users</h6>
              <% end %>
            </li>
            <li class="nav-item m-4">
              <%= link_to  books_path,method: :get do %>
                <h6 class="text-light fs-2"><i class="fas fa-book-open"></i>Books</h6>
              <% end %>
            </li>
            <li class="nav-item m-4">
              <%= link_to  destroy_user_session_path, method: :delete do%>
                <h6 class="text-light fs-2"><i class="fas fa-sign-out-alt"></i>Log out</h6>
              <% end %>

            </li>
          <% else %>
            <li class="nav-item p-3">
              <%= link_to  root_path do %>
                <h6 class="text-light fs-2"><i class="fas fa-home"></i>Home</h6>
              <% end %>
            </li>
            <li class="nav-item p-3">
              <%= link_to  about_path do %>
                <h6 class="text-light fs-2"><i class="fas fa-link"></i>About</h6>
              <% end %>
            </li>
            <li class="nav-item p-3">
              <%= link_to  new_user_registration_path do %>
                <h6 class="text-light fs-2"><i class="fas fa-user-plus"></i>Sign up</h6>
              <% end %>
            </li>
            <li class="nav-item p-3">
              <%= link_to  new_user_session_path do %>
                <h6 class="text-light fs-2"><i class="fas fa-sign-in-alt"></i>Log in</h6>
              <% end %>
            </li>
          <% end %>
        </div>
        </div>
      </nav>
    </header>
    <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
    <%= yield %>
  </body>
</html>
